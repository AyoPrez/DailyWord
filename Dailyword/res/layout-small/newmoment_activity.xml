<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/b_language"
        android:background="#0A7"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#222"
        android:textSize="12sp"
        android:text="@string/button_language" />

    <Button
        android:id="@+id/b_level"
        android:background="#A70"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#222"
        android:textSize="12sp"
        android:text="@string/button_level" />

    <Button
        android:id="@+id/b_time"
        android:background="#AAA"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#222"
        android:textSize="12sp"
        android:text="@string/button_time" />

    <Button
        android:id="@+id/b_accept"
        android:background="#07A"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="#EEE"
        android:textSize="12sp"
        android:text="@string/button_accept" />
    
</LinearLayout>