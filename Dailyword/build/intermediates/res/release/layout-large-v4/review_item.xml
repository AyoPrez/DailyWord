<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tV_review_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Large Text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tV_review_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text" />

        <TextView
            android:id="@+id/tV_review_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iV_review_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:contentDescription="@string/contestDescription"
        android:src="@drawable/ic_launcher"  />

    <ImageView
        android:id="@+id/iV_review_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:contentDescription="@string/contestDescription"
        android:src="@drawable/ic_launcher"  />

</LinearLayout><!-- From: file:/home/ayo/Proyectos/dailyWord/Dailyword/res/layout-large/review_item.xml -->