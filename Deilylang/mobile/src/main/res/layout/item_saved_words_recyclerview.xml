<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/imageButton_savedWord_speaker"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_volume_up_black_48dp"/>

    <TextView
        android:id="@+id/textView_savedWord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="Ejemplo2"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/savedWordSize"/>

    <TextView
        android:id="@+id/textView_savedWord_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Ejemplo1"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/savedWordSize"/>
</LinearLayout>