<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iV_noInternet"
        android:layout_width="@dimen/image_no_internet_width"
        android:layout_height="@dimen/image_no_internet_height"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_cancel_white_48dp"
        android:layout_marginTop="@dimen/image_no_internet_marginTop" />

    <TextView
        android:id="@+id/tV_noInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_internet"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="@dimen/text_no_internet_padding"
        android:textSize="@dimen/text_no_internet_size"/>
</LinearLayout>