<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/button_SHC"
            android:layout_width="@dimen/width_moreApp_icon"
            android:layout_height="@dimen/height_moreApp_icon"
            android:background="@mipmap/icon_launcher"
            android:layout_marginTop="@dimen/margin_moreApp_icon"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView_DeilyLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appName_shc"
            android:textSize="@dimen/textSize_moreApp_appname"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_moreApp_icon"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/button_DeilyQuote"
            android:layout_width="@dimen/width_moreApp_icon"
            android:layout_height="@dimen/height_moreApp_icon"
            android:background="@mipmap/deilylang_icon"
            android:layout_marginTop="@dimen/margin_moreApp_icon"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView_DeilyQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appName_deilyquote"
            android:textSize="@dimen/textSize_moreApp_appname"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_moreApp_icon"/>
    </LinearLayout>

</LinearLayout>